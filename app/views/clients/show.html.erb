<div id="wrapper">
  <div id="page-wrapper">
  <%= render 'dashboards/sidenav' %>
    <div class="row">
      <div class="col-lg-12">
        <h1><i class="fa fa-user"></i> Profile <small>This is your profile</small></h1>
      </div>
    </div><!-- /.row -->

  <div class="row">
    <div class="col-md-offset-2 col-md-8 ">
      <div class="col-sm-12">
        <div class="col-xs-12 col-sm-8">
          <h3><%= @client.name || @client.email %></h3>
          <br>
          <p><strong>Email:</strong> <%= @client.email %></p>
          <p><strong>Phone Number:</strong> <%= @client.phone %></p>
          <p><strong>Address:</strong> <%= @client.address %></p>
          <p><strong>Website:</strong> <%= @client.website %></p>
          <p><strong>Github:</strong> <%= @client.github %></p>
          <p><strong>Twitter:</strong> <%= @client.twitter %></p>
          <p><strong>Facebook:</strong> <%= @client.facebook %></p>
          <p><strong>Linkedin:</strong> <%= @client.linkedinPublicUrl %></p>
          <p><strong>Avatar:</strong> <%= @client.avatarUrl %></p>
          <p><strong>Industry:</strong> <%= @client.industry %></p>
          <p><strong>Company Bio:</strong> <%= @client.companyBio %></p>
          <p><strong>Contact Name:</strong> <%= @client.contact %></p>
          <p><strong>Mobile:</strong> <%= @client.mobile %></p>
          <p><strong>Contact Role:</strong> <%= @client.role %></p>
          <p><strong>Contact Date of Birth:</strong> <%= @client.dob %></p>
        </div>
        <div class="col-xs-12 col-sm-4 text-center">
          <figure>
            <% if @client.image.present? %>
              <%= image_tag @client.image.url(:thumb), class: 'img-circle img-responsive uploaded-pic' %>
            <% elsif (@client.avatarUrl != "") && (@client.avatarUrl != nil) %>
              <%= image_tag @client.avatarUrl, class: 'img-circle img-responsive uploaded-pic' %>
            <% else %>
              <%= image_tag "github_avatar.png", class: 'img-circle img-responsive default-pic' %>
            <% end %>
          </figure>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-4 col-md-8 text-center">
    <br/>
    <%= link_to 'Edit', edit_client_registration_path(@client.id), class: "btn btn-primary" %>
  </div>
  <%= render 'dashboards/footer' %>
  </div>
</div>