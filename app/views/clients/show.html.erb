<div id="wrapper">
  <div id="page-wrapper">
  <%= render 'dashboards/sidenav' %>
    <div class="row">
      <div class="col-lg-12">
        <h1><i class="fa fa-user"></i> Profile <small>This is your profile</small></h1>
      </div>
    </div><!-- /.row -->

  <div class="row">
    <div class="col-md-offset-2 col-md-8 ">
      <div class="col-sm-12">
        <div class="col-xs-12 col-sm-8">
          <h3>Profile for <%= @client.name || @client.email %></h3>
          <br>
          <p><strong>Email:</strong> <%= @client.email %></p>
          <p><strong>Phone Number:</strong> <%= @client.phone %></p>
          <p><strong>Address:</strong> <%= @client.address %></p>
          <p><strong>Website:</strong> <%= @client.website %></p>
          <p><strong>Github:</strong> <%= @client.github %></p>
          <p><strong>Twitter:</strong> <%= @client.twitter %></p>
          <p><strong>Facebook:</strong> <%= @client.facebook %></p>
          <p><strong>Linkedin:</strong> <%= @client.linkedinPublicUrl %></p>
          <p><strong>Avatar:</strong> <%= @client.avatarUrl %></p>
          <p><strong>Industry:</strong> <%= @client.industry %></p>
          <p><strong>Company Bio:</strong> <%= @client.companyBio %></p>
          <p><strong>Contact Name:</strong> <%= @client.contact %></p>
          <p><strong>Mobile:</strong> <%= @client.mobile %></p>
          <p><strong>Contact Role:</strong> <%= @client.role %></p>
          <p><strong>Contact Date of Birth:</strong> <%= @client.dob %></p>
          <h3>Projects</h3>
            <% if @client.projects.any? %>
              <% @client.projects.each do |project| %>
                <p><strong>Name:</strong> <%= project.name %></p>
                <p><strong>Deadline:</strong> <%= project.deadline %></p>
                <p><strong>Budget:</strong> <%= number_to_currency(project.budget, :unit => "Â£") %></p>
                <p><strong>Industry:</strong> <%= project.projectIndustry %></p>
                <p><strong>Description:</strong> <%= project.description %></p>
                <% end %>
              <% else %>
              <%= 'No projects yet' %>
            <% end %>
            <p><%= link_to 'Add Project', new_client_project_path(@client.id), class: "btn btn-primary btn-lg" %></p>
        </div>
        <div class="col-xs-12 col-sm-4 text-center">
          <figure>
            <% if @client.image.present? %>
              <%= image_tag @client.image.url(:thumb), class: 'uploaded-pic' %>
            <% elsif (@client.avatarUrl != "") && (@client.avatarUrl != nil) %>
              <%= image_tag @client.avatarUrl, class: 'uploaded-pic' %>
            <% else %>
              <%= image_tag "github_avatar.png", class: 'default-pic' %>
            <% end %>
          </figure>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-12 col-sm-4 col-md-8 text-center">
    <%= link_to 'Edit', edit_client_registration_path(@client.id), class: "btn btn-primary btn-lg" %>
    <%= link_to 'Back', :back, class: "btn btn-primary btn-lg" %>
  </div>
  <%= render 'dashboards/footer' %>
  </div>
</div>