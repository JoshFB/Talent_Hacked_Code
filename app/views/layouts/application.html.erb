<!DOCTYPE html>
<html>
	<head>
		<title>TalentHacked</title>
		<%= stylesheet_link_tag    'application', media: 'all' %>
		<%= javascript_include_tag 'application' %>
		<%= csrf_meta_tags %>
	</head>
	<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div id="logo-image">
            <%= link_to image_tag("talent_hacked_italic_swoosh_white.png", alt: "Talent Hacked"), '/' %>
          </div>
          <div id="flash-message">
            <% if notice %>
              <p id="notice"><%= notice %></p>
            <% end %>
            <% if alert %>
              <p id="alert"><%= alert %></p>
            <% end %>
          </div>
        </div>
          <ul class="nav navbar-nav navbar-right navbar-user">
            <li class="dropdown user-dropdown">
              <%= link_to "#{current_developer.email}", dashboard_path, class: "dropdown-toggle", :data => {:toggle => "dropdown"} %>
              <ul class="dropdown-menu">
                <li><%= link_to 'Dashboard', dashboard_path, method: :get, class: "navbar-text navbar-right" %></li>
                <li><%= link_to 'Show profile', developer_path(current_developer.id), class: "navbar-text navbar-right" %></li>
                <li><%= link_to 'Edit profile', edit_developer_registration_path, method: :get, class: "navbar-text navbar-right" %></li>
                <li class="divider"></li>
                <li><%= link_to 'Sign out', destroy_developer_session_path, method: :delete, class: "navbar-text navbar-right" %></li>
              </ul>
            </li>
          </ul>
    </div>
        <!-- /.navbar-collapse -->
		<%= yield %>
	</body>
</html>
