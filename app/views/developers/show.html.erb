<div id="wrapper">
  <div id="page-wrapper">

    <ul class="nav navbar-nav side-nav">
      <li><i class="fa fa-dashboard fa-1x"></i><%= link_to 'Dashboard', dashboard_path, method: :get, class: "active" %></li>
      <li><i class="fa fa-file-text"></i><%= link_to 'Offers', dashboard_path, method: :get %></li>
      <li><i class="fa fa-edit"></i><%= link_to 'Pending', dashboard_path, method: :get %></li>
      <li><i class="fa fa-tasks"></i><%= link_to 'In Progress', dashboard_path, method: :get %></li>
      <li><i class="fa fa-check-square-o"></i><%= link_to 'Completed', dashboard_path, method: :get %></li>
      <li><i class="fa fa-exclamation-circle"></i><%= link_to 'Declined', dashboard_path, method: :get %></li>
    </ul>

    <div class="row">
      <div class="col-lg-12">
        <h1><i class="fa fa-user"></i> Profile <small>Edit your profile</small></h1>
      </div>
    </div><!-- /.row -->

    <div class="row">
      <div class="col-md-offset-2 col-md-8 ">
        <div class="col-sm-12">
            <div class="col-xs-12 col-sm-8">
              <h3><%= @developer.name || @developer.email %></h3>
                  <br>
                  <p><strong>Email: </strong> <%= @developer.email %></p>
                  <p><strong>Phone: </strong> <%= @developer.phone %></p>
                  <p><strong>Address: </strong> <%= @developer.address %></p>
                  <p><strong>Day Rate: </strong> <%= number_to_currency(@developer.dayrate, :unit => "Â£") %></p>
                  <p><strong>Twitter: </strong> <%= @developer.twitter %></p>
                  <p><strong>Facebook: </strong> <%= @developer.facebook %></p>
                  <p><strong>Linkedin: </strong> <%= @developer.linkedinPublicUrl %></p>
                  <p><strong>Github: </strong> <%= @developer.github %></p>
                  <p><strong>Website: </strong> <%= @developer.website %></p>
                  <p><strong>Date of Birth: </strong> <%= @developer.dob %></p>
                  <p><strong>Bio: </strong> <%= @developer.bio %></p>
                  <p><strong>Avatar: </strong> <%= @developer.avatarUrl %></p>
            </div>
            <div class="col-xs-12 col-sm-4 text-center">
              <figure>
                <% if @developer.image.present? %>
                  <%= image_tag @developer.image.url(:thumb), class: 'img-circle img-responsive uploaded-pic' %>
                <% elsif (@developer.avatarUrl != "") && (@developer.avatarUrl != nil) %>
                  <%= image_tag @developer.avatarUrl, class: 'img-circle img-responsive uploaded-pic' %>
                <% else %>
                  <%= image_tag "github_avatar.png", class: 'img-circle img-responsive default-pic' %>
                <% end %>
              </figure>
            </div>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-4 col-md-8 text-center">
      <%= link_to 'Edit', edit_developer_registration_path(@developer.id), class: "btn btn-primary btn-lg" %>
      <%= link_to 'Back', :back, class: "btn btn-primary btn-lg" %>
    </div>