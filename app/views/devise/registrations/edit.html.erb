<div id="wrapper">
  <div id="page-wrapper">
  <%= render 'dashboards/sidenav' %>
    <div class="row">
      <div class="col-lg-12">
        <h1><i class="fa fa-user"></i> Edit Profile <small>Edit your profile</small></h1>
      </div>
    </div><!-- /.row -->

    <div class="row">
      <div class="col-md-offset-2 col-md-8 ">
        <div class="col-sm-12">
            <div class="col-xs-12 col-sm-8">
              <!-- <h2><%= resource_name.to_s.humanize %> Profile</h2> -->
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
                <%= devise_error_messages! %>

                <div><%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true, class: "form-control" %></div>

                <div><%= f.label :email %><br />
                <%= f.email_field :email, class: "form-control"  %></div>

                 <div><%= f.label :phone %><br />
                <%= f.text_field :phone, class: "form-control" %></div>

                <div><%= f.label :address %><br />
                <%= f.text_field :address, class: "form-control" %></div>

                <div><%= f.label :website %><br />
                <%= f.text_field :website, class: "form-control" %></div>

                <div><%= f.label :github %><br />
                <%= f.text_field :github, class: "form-control" %></div>

                <div><%= f.label :twitter %><br />
                <%= f.text_field :twitter, class: "form-control" %></div>

                <div><%= f.label :facebook %><br />
                <%= f.text_field :facebook, class: "form-control" %></div>

               <div><%= f.label :linkedinPublicUrl, "LinkedIn Url" %><br />
                <%= f.text_field :linkedinPublicUrl, class: "form-control" %></div>

                <div><%= f.label :avatarUrl, "Avatar Url" %><br />
                <%= f.text_field :avatarUrl, class: "form-control" %></div>

                <div><%= f.label :dob, "Date of Birth" %><br />
                <%= f.text_field :dob, class: "form-control" %></div>

                <% if current_client %>
                <div><%= f.label :industry %><br />
                <%= f.text_field :industry, class: "form-control" %></div>

                <div><%= f.label :contact, "Contact Name" %><br />
                <%= f.text_field :contact, class: "form-control" %></div>

                <div><%= f.label :mobile %><br />
                <%= f.text_field :mobile, class: "form-control" %></div>

                <div><%= f.label :role %><br />
                <%= f.text_field :role, class: "form-control" %></div>

                <div><%= f.label :companyBio, "Company Bio" %><br />
                <%= f.text_area :companyBio, class: "form-control" %></div>
                <% end %>

                <% if current_developer %>
                    <div><%= f.label :dayrate, "Dayrate (GBP)" %><br/>
                    <%= f.text_field :dayrate, class: "form-control" %></div>  

                    <div><%= f.label :bio %><br/>
                    <%= f.text_field :bio, class: "form-control" %></div>

                     <div><%= f.label :skills %><br/>
                    <%= f.text_field :skills, value: "", class: "form-control" %></div>  

                     <div><%= f.label :languages %><br/>
                    <%= f.text_field :languages, value: "", class: "form-control" %></div>
                <% end %>


                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>

                <%= f.label :image %>
                <%= f.file_field :image %>

                 <div><%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                  <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>

                <div><%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div>

              <!--   <div><%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                  <%= f.password_field :current_password, autocomplete: "off" %></div> -->
                <br/>
                <div><%= f.submit "Update", class: 'btn btn-primary' %></div>
              <% end %>
            </div>

            <div class="col-xs-12 col-sm-4 text-center">
              <figure>
                <% if current_developer %>
                    <% if current_developer.image.present? %>
                        <%= image_tag current_developer.image.url(:thumb), class: 'img-circle img-responsive uploaded-pic' %>
                  <% elsif (current_developer.avatarUrl != "") && (current_developer.avatarUrl != nil) %>
                        <%= image_tag current_developer.avatarUrl, class: 'img-circle img-responsive uploaded-pic' %>
                    <% else %>
                        <%= image_tag "github_avatar.png", class: 'img-circle img-responsive default-pic' %>
                    <% end %>
                <% end %>

                 <% if current_client %>
                    <% if current_client.image.present? %>
                        <%= image_tag current_client.image.url(:thumb), class: 'img-circle img-responsive uploaded-pic' %>
                  <% elsif (current_client.avatarUrl != "") && (current_client.avatarUrl != nil) %>
                      <%= image_tag current_client.avatarUrl, class: 'img-circle img-responsive uploaded-pic' %>
                    <% else %>
                      <%= image_tag "github_avatar.png", class: 'img-circle img-responsive default-pic' %>
                    <% end %>
                <% end %>
              </figure>
            </div>
        </div>
      </div>
    </div>

    <div class="col-xs-12 col-sm-4 col-md-8 text-center">
      <h5>Cancel my account</h5>
      <%= button_to "Cancel my account", registration_path(resource_name), class: 'btn btn-danger', data: { confirm: "Are you sure?" }, method: :delete %>
    </div>
    <%= render 'dashboards/footer' %>
  </div>
</div>