<%= form_for [@client, @contact, @project] do |form| %>
	<%= form.label :name %>
	<%= form.text_field :name %>

	<%= form.label :deadline %>
	<%= form.text_field :deadline %>

	<%= form.label :budget, 'Budget (GBP)' %>
	<%= form.text_field :budget %>

	<%= form.label :projectIndustry, 'Industry' %>
	<%= form.text_field :projectIndustry %>

	<%= form.submit %>
<% end %>