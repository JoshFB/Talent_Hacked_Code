<div id="wrapper">
  <div id="page-wrapper">
  <%= render 'dashboards/shim' %>
  <%= render 'dashboards/sidenav' %>

    <div class="row">
      <div class="col-lg-12">
        <h1><i class="fa fa-dashboard"></i> Dashboard <small>Statistics Overview</small></h1>
      </div>
    </div><!-- /.row -->

    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info offers">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-file-text fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <p class="announcement-heading">30</p>
                <p class="announcement-text">Offers</p>
              </div>
            </div>
          </div>
          <div class="panel-footer announcement-bottom">
            <div class="row">
                <%= link_to 'More', dashboard_path, method: :get, class: "col-xs-6" %>
              <div class="col-xs-6 text-right">
                <i class="fa fa-arrow-circle-right"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3">
        <div class="panel panel-info pending">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-edit fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <p class="announcement-heading">6</p>
                <p class="announcement-text">Pending</p>
              </div>
            </div>
          </div>
          <div class="panel-footer announcement-bottom">
            <div class="row">
                <%= link_to 'More', dashboard_path, method: :get, class: "col-xs-6" %>
              <div class="col-xs-6 text-right">
                <i class="fa fa-arrow-circle-right"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3">
        <div class="panel panel-info in-progress">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-tasks fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <p class="announcement-heading">3</p>
                <p class="announcement-text">In Progress</p>
              </div>
            </div>
          </div>
          <div class="panel-footer announcement-bottom">
            <div class="row">
                <%= link_to 'More', dashboard_path, method: :get, class: "col-xs-6" %>
              <div class="col-xs-6 text-right">
                <i class="fa fa-arrow-circle-right"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3">
        <div class="panel panel-info completed">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-check-square-o fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <p class="announcement-heading">27</p>
                <p class="announcement-text">Completed</p>
              </div>
            </div>
          </div>
          <div class="panel-footer announcement-bottom">
            <div class="row">
                <%= link_to 'More', dashboard_path, method: :get, class: "col-xs-6" %>
              <div class="col-xs-6 text-right">
                <i class="fa fa-arrow-circle-right"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3">
        <div class="panel panel-info declined">
          <div class="panel-heading">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-exclamation-circle fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <p class="announcement-heading">7</p>
                <p class="announcement-text">Declined</p>
              </div>
            </div>
          </div>
          <div class="panel-footer announcement-bottom">
            <div class="row">
                <%= link_to 'More', dashboard_path, method: :get, class: "col-xs-6" %>
              <div class="col-xs-6 text-right">
                <i class="fa fa-arrow-circle-right"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      
  </div><!-- /#page-wrapper -->
</div><!-- /#wrapper -->
<%= render 'dashboards/footer' %>