<div id="wrapper">
  <div id="page-wrapper">
    <%= render 'dashboards/sidenav' %>
    <div class="row">
      <div class="col-lg-12">
        <h1><i class="fa fa-dashboard"></i> Dashboard <small>Statistics Overview</small></h1>
      </div>
    </div><!-- /.row -->

    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-info test-jesus">
          <div class="panel-heading offers">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-file-text fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <p class="announcement-heading">30</p>
                <p class="announcement-text">Offers</p>
              </div>
            </div>
          </div>
          
        </div>
      </div>

      <div class="col-lg-12">
        <div class="panel panel-info test-jesus">
          <div class="panel-heading pending offers">
            <div class="row">
              <div class="col-xs-6">
            <%= link_to "<i class='fa fa-edit fa-5x'></i>".html_safe, dashboard_path, method: :get, class: "col-xs-6" %>
              </div>
              <div class="col-xs-6 text-right">
                <p class="announcement-heading">6</p>
                <p class="announcement-text">Pending</p>
              </div>
            </div>
          </div>
          
        </div>
      </div>

      <div class="col-lg-12">
        <div class="panel panel-info test-jesus">
          <div class="panel-heading in-progress">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-tasks fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <p class="announcement-heading">3</p>
              </div>
            </div>
            <div class="row">
              <p class="announcement-text">In Progress</p>
            </div>
          </div>
          
        </div>
      </div>

      <div class="col-lg-12">
        <div class="panel panel-info test-jesus">
          <div class="panel-heading completed">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-check-square-o fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <p class="announcement-heading">27</p>
                <p class="announcement-text">Completed</p>
              </div>
            </div>
          </div>
          
        </div>
      </div>

      <div class="col-lg-12">
        <div class="panel panel-info test-jesus">
          <div class="panel-heading declined">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-exclamation-circle fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <p class="announcement-heading">7</p>
                <p class="announcement-text">Declined</p>
              </div>
            </div>
          </div>
          
        </div>
      </div>
      
  </div><!-- /#page-wrapper -->
</div><!-- /#wrapper -->
