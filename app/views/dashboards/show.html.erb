<div id="wrapper">
  <div id="page-wrapper">
    <%= render 'dashboards/sidenav' %>
    <div class="row">
      <div class="col-lg-12">
        <h1><i class="fa fa-dashboard"></i> Dashboard <small>Statistics Overview</small></h1>
      </div>
    </div><!-- /.row -->

      <div class="col-lg-3">
        <div class="panel panel-info">
          <div class="panel-heading pending">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-edit fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <% if current_client %>
                  <p class="announcement-heading">
                  <%= @client.projects.select{|project| project.status == 'Pending' }.count %></p>
                <% else %>
                  <p class="announcement-heading">0</p>
                <% end %>
                <p class="announcement-text">Pending</p>
              </div>
            </div>
          </div>
          <div class="panel-footer announcement-bottom">
            <div class="row">
                <%= link_to 'More', dashboard_path, method: :get, class: "col-xs-6" %>
              <div class="col-xs-6 text-right">
                <i class="fa fa-arrow-circle-right"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3">
        <div class="panel panel-info">
          <div class="panel-heading in-progress">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-tasks fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <% if current_client %>
                  <p class="announcement-heading">
                  <%= @client.projects.select{|project| project.status == 'In Progress' }.count %></p>
                <% else %>
                  <p class="announcement-heading"></p>
                <% end %>
                <p class="announcement-text">In Progress</p>
              </div>
            </div>
          </div>
          <div class="panel-footer announcement-bottom">
            <div class="row">
                <%= link_to 'More', dashboard_path, method: :get, class: "col-xs-6" %>
              <div class="col-xs-6 text-right">
                <i class="fa fa-arrow-circle-right"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3">
        <div class="panel panel-info">
          <div class="panel-heading completed">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-check-square-o fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <% if current_client %>
                  <p class="announcement-heading">
                  <%= @client.projects.select{|project| project.status == 'Completed' }.count %></p>
                <% else %>
                  <p class="announcement-heading"></p>
                <% end %>
                <p class="announcement-text">Completed</p>
              </div>
            </div>
          </div>
          <div class="panel-footer announcement-bottom">
            <div class="row">
                <%= link_to 'More', dashboard_path, method: :get, class: "col-xs-6" %>
              <div class="col-xs-6 text-right">
                <i class="fa fa-arrow-circle-right"></i>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3">
        <div class="panel panel-info">
          <div class="panel-heading declined">
            <div class="row">
              <div class="col-xs-6">
                <i class="fa fa-exclamation-circle fa-5x"></i>
              </div>
              <div class="col-xs-6 text-right">
                <% if current_client %>
                  <p class="announcement-heading">
                  <%= @client.projects.select{|project| project.status == 'Declined' }.count %></p>
                <% else %>
                  <p class="announcement-heading"></p>
                <% end %>
                <p class="announcement-text">Declined</p>
              </div>
            </div>
          </div>
          <div class="panel-footer announcement-bottom">
            <div class="row">
                <%= link_to 'More', dashboard_path, method: :get, class: "col-xs-6" %>
              <div class="col-xs-6 text-right">
                <i class="fa fa-arrow-circle-right"></i>
              </div>
            </div>
          </div>
        </div>
      </div>
      
  </div><!-- /#page-wrapper -->
</div><!-- /#wrapper -->
<%= render 'dashboards/footer' %>